{
  "name": "@planner/mobile",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "run-ios": "react-native run-ios",
    "run-android": "react-native run-android",
    "test": "jest",
    "lint": "eslint .",
    "postinstall": "(cd ios && pod install)",
    "create-exports": "node ./scripts/createExports.js"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.6.1",
    "moment": "^2.24.0",
    "ramda": "^0.26.1",
    "react": "16.8.6",
    "react-native": "0.60.4",
    "react-native-gesture-handler": "^1.4.1",
    "react-native-picker-select": "^6.3.3",
    "react-native-reanimated": "^1.2.0",
    "react-native-svg": "^9.9.9",
    "react-native-swipe-gestures": "^1.0.3",
    "react-navigation": "^4.0.5",
    "react-navigation-stack": "^1.8.0",
    "react-navigation-tabs": "^2.5.3",
    "styled-components": "^4.3.2",
    "styled-system": "^5.1.2",
    "utility-types": "^3.7.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@types/jest": "^24.0.17",
    "@types/moment": "^2.13.0",
    "@types/node": "12.6.8",
    "@types/ramda": "^0.26.22",
    "@types/react": "^16.8.24",
    "@types/react-native": "^0.60.3",
    "@types/react-native-swipe-gestures": "^1.0.0",
    "@types/react-navigation": "^3.0.8",
    "@types/react-test-renderer": "^16.8.3",
    "@types/styled-components": "^4.1.18",
    "@types/styled-system": "^5.1.1",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "metro-react-native-babel-preset": "^0.55.0",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "jest": {
    "preset": "react-native",
    "roots": [
      "<rootDir>/packages"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react"
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn build:ui",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "stylelint --fix",
      "prettier",
      "git add"
    ]
  }
}
